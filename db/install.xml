<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="course/format/topcoll/db" VERSION="20170908" COMMENT="XMLDB file for Moodle course/format/topcoll"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="format_topcoll_section_info" COMMENT="Saves the section panel styles info">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="id from mdl_course"/>
                <FIELD NAME="course_sections_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="id from mdl_course_sections_id"/>
                <FIELD NAME="panel_background_colour" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="accordion panel background colour"/>
                <FIELD NAME="panel_header_colour" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="accordion panel header text colour"/>
                <FIELD NAME="panel_header_alignment" TYPE="char" LENGTH="255" NOTNULL="false" DEFAULT="left" SEQUENCE="false" COMMENT="accordion panel header text alignment. left, right, center"/>
                <FIELD NAME="toggle_icon_alignment" TYPE="char" LENGTH="255" NOTNULL="false" DEFAULT="left" SEQUENCE="false" COMMENT="accordion panel toggle icon alignment. left, right, centre"/>
                <FIELD NAME="fontawesome_icon" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="option fontawesome icon"/>
                <FIELD NAME="fontawesome_icon_colour" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="fontawesome icon colour"/>
                <FIELD NAME="fontawesome_icon_alignment" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="alignment of the fontawesome icon. Left, right or centre"/>
                <FIELD NAME="default_expanded" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="never_collapse" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="mdl_formtopcsectinfo_uix" TYPE="unique" FIELDS="courseid, course_sections_id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>